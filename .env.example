# ===== FIREBASE CONFIGURATION =====
# Get these from Firebase Console: https://console.firebase.google.com/
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# ===== EMAILJS CONFIGURATION =====
# Get these from EmailJS: https://www.emailjs.com/
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_PRIVATE_KEY=your_emailjs_private_key

# ===== GOOGLE SHEETS CONFIGURATION =====
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_SHEETS_API_KEY=your_google_api_key
GOOGLE_SHEETS_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_SHEETS_REGISTRATIONS_ID=your_registrations_spreadsheet_id
GOOGLE_SHEETS_VOLUNTEERS_ID=your_volunteers_spreadsheet_id
GOOGLE_SHEETS_VENDORS_ID=your_vendors_spreadsheet_id

# ===== GOOGLE SERVICE ACCOUNT (for Firebase Functions) =====
# Download from Google Cloud Console and paste JSON content
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account"...}
